{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "FundooNoteApp",
        "description": "This app is build for creating user api"
    },
    "host": "localhost:3000",
    "tags": [
        {
            "name": "FundooNotes",
            "description": "API for user registration"
        }
    ],
    "schemes": [
        "http"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "paths": {
        "/register": {
            "post": {
                "tags": [
                    "FundooNotes"
                ],
                "summary": "Creating a new note",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "This is the fundoo note"
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Successful"
                    },
                    "400": {
                        "description": "Failure : Note not created successfully"
                    }
                }
            }
        },
        "/login": {
            "post": {
                "tags": [
                    "FundooNotes"
                ],
                "summary": "Login to FundooNotes",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "login"
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Logged in successful"
                    },
                    "400": {
                        "description": "Login failed, please try again"
                    }
                }
            }
        },
        "/forgetPassword": {
            "post": {
                "tags": [
                    "FundooNotes"
                ],
                "summary": "Forgot Password",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "forgot password"
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "We have sent an email, plase check."
                    },
                    "400": {
                        "description": "Mailing error, mail can't be send"
                    }
                }
            }
        },
        "/resetPassword": {
            "post": {
                "tags": [
                    "FundooNotes"
                ],
                "summary": "Reset Password in FundooNotes",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "reset password"
                    },
                    {
                        "in": "header",
                        "name": "token",
                        "description": "token verification",
                        "required": true
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Password reset successful"
                    },
                    "400": {
                        "description": "Failed to reset your password, please check again"
                    }
                }
            }
        },
        "/notes": {
            "post": {
                "tags": [
                    "FundooNotes"
                ],
                "summary": "Create notes api",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "craete note"
                    },
                    {
                        "in": "header",
                        "name": "token",
                        "description": "an authorization token",
                        "required": true
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Note created successfully"
                    },
                    "400": {
                        "description": "Failed to create note"
                    }
                }
            },
            "get": {
                "tags": [
                    "FundooNotes"
                ],
                "summary": "Retrieve notes from FundooNotes",
                "parameters": [
                    {
                        "in": "header",
                        "name": "token",
                        "description": "an authorization token",
                        "required": true
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Notes retrieved successfully"
                    },
                    "400": {
                        "description": "Failed to get notes"
                    }
                }
            }
        },"/notes/{id}":{
            "parameters": [
                {
                    "name": "id",
                    "in": "path",
                    "required": true,
                    "description": "Please enter the id for the note",
                    "type":"string"
                }
            ],
            "put": {
                "tags": [
                    "FundooNotes"
                ],
                "summary": "Update note in FundooNotes",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "Updated an existing note"
                    },
                    {
                        "in": "header",
                        "name": "token",
                        "description": "an authorization token",
                        "required": true
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Update note successfully"
                    },
                    "400": {
                        "description": "Failed to update the note"
                    }
                }
            },
            "delete": {
                "tags": [
                    "FundooNotes"
                ],
                "summary": "Delete note",
                "parameters": [
                    {
                        "in": "header",
                        "name": "token",
                        "description": "an authorization token",
                        "required": true
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "note deleted"
                    },
                    "400": {
                        "description": "failed to delete notes"
                    }
                }
            }
        }        
    }
}